<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="BaseStatCardStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Width" Value="200"/>
        <Setter Property="Height" Value="120"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="10" 
                                ShadowDepth="3" 
                                Color="#40000000" 
                                Opacity="0.3"/>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate x:Key="StatCardTemplate" TargetType="ContentControl">
        <Border Style="{StaticResource BaseStatCardStyle}"
                Background="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            VerticalAlignment="Top">
                    <TextBlock Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=DataContext.Title}"
                               FontSize="12"
                               FontWeight="Medium"
                               Foreground="White" 
                               Opacity="0.9"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Grid.Row="1"
                           Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=DataContext.Value}"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center"/>
            </Grid>
            
        </Border>
    </ControlTemplate>
</ResourceDictionary>