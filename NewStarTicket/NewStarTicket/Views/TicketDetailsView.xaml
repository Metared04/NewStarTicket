<Window x:Class="NewStarTicket.Views.TicketDetailsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewStarTicket.Views"
        mc:Ignorable="d"
        Title="Informations" Height="450" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Images/back-image1.jpg" 
                Stretch="UniformToFill"/>
        </Grid.Background>

        <TextBlock Text="{Binding TitleTicket}" 
                   FontSize="18" 
                   FontWeight="Bold"
                   Margin="0,0,0,10"
                   VerticalAlignment="Center"/>
        
        <StackPanel Grid.Row="1" 
                    Orientation="Vertical">
            <TextBlock Text="{Binding IdTicket, StringFormat=ID : {0}}" />
            <TextBlock Text="{Binding DescriptionTicket, StringFormat=Description : {0}}" />
            <TextBlock Text="{Binding LocationIdTicket, StringFormat=Lieu : {0}}" />
            <TextBlock Text="{Binding EquipmentIdTicket, StringFormat=Équipement : {0}}" />
            <TextBlock Text="{Binding EmergencyLevelIdTicket, StringFormat=Urgence : {0}}" />
            <TextBlock Text="{Binding StatusIdTicket, StringFormat=Statut : {0}}" />
            <TextBlock Text="{Binding BroadcastDateTicket, StringFormat=Créé le : {0:yyyy/MM/dd HH:mm}}" />
            <TextBlock Text="{Binding ResolvedDateTicket, StringFormat=Résolu le : {0:yyyy/MM/dd HH:mm}}" />
            <TextBlock Text="{Binding UserBroadcastedName, StringFormat=Émetteur : {0}}" />
            <TextBlock Text="{Binding UserResolvedName, StringFormat=Résolveur : {0}}" />
        </StackPanel>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Profil émetteur" 
                    Command="{Binding ViewEmitterProfileCommand}" 
                    Width="120"/>
            <Button Content="Profil résolveur" 
                    Command="{Binding ViewResolverProfileCommand}" 
                    Width="120"/>
            <Button Content="Exporter en PDF" 
                    Command="{Binding ExportToPdfCommand}" 
                    Width="120"/>
            <Button Content="Fermer" 
                    Command="{Binding CloseCommand}" 
                    Width="80"/>
        </StackPanel>
    </Grid>
</Window>
