<UserControl x:Class="NewStarTicket.Views.TicketListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewStarTicket.Views"
             mc:Ignorable="d" 
             d:DesignHeight="570" d:DesignWidth="1025">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top"
                    Grid.Row="0">
            <TextBox Text="Rechercher ..."
                     Width="300"
                     Height="30"/>
            <Button Name="searchButton"
                    Content="Chercher"
                    Margin="5,0,0,0"/>
        </StackPanel>


        <DataGrid ItemsSource="{Binding CurrentTicketList}" 
                  AutoGenerateColumns="False" 
                  HeadersVisibility="Column" 
                  CanUserAddRows="False" 
                  GridLinesVisibility="Horizontal" 
                  Grid.Row="1"
                  FontFamily="Palatino Linotype"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID Ticket" 
                                    Binding="{Binding IdTicket}" 
                                    Width="150"/>
                <DataGridTextColumn Header="Titre" 
                                    Binding="{Binding TitleTicket}" 
                                    Width="*"/>
                <DataGridTextColumn Header="Date d'emission" 
                                    Binding="{Binding BroadcastDateTicket}" 
                                    Width="120"/>
                <DataGridTextColumn Header="Niveau d'urgence" 
                                    Binding="{Binding EmergencyLevelIdTicket}" 
                                    Width="50"/>
                <DataGridTextColumn Header="Utilisateur" 
                                    Binding="{Binding UserBroadcastedTicketName}" 
                                    Width="100"/>
                <DataGridTextColumn Header="Status"
                                    Binding="{Binding StatusIdTicket}"
                                    Width="50"/>
                <DataGridTemplateColumn Header="Option" 
                                        Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Voir" 
                                    Command="{Binding DataContext.ViewCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}" 
                                    Width="60"/>
                                <Button Content="Supprimer" 
                                    Background="Red" 
                                    Foreground="White" 
                                    Command="{Binding DataContext.DeleteTicketCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                    CommandParameter="{Binding}" 
                                    Width="75"/>
                            </StackPanel>

                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Etat ticket" 
                                        Width="100"
                                        Visibility="{Binding AdminColumnVisibility}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Button Content="Je prends !" 
                                    Background="LightBlue" 
                                    Command="{Binding DataContext.TakeTicketCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                    CommandParameter="{Binding}" 
                                    Width="100" 
                                    Margin="0,2"/>
                                <Button Content="Terminer !" 
                                    Background="LightGreen" 
                                    Command="{Binding DataContext.FinishingTicketCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                    CommandParameter="{Binding}" 
                                    Width="100" 
                                    Margin="0,2"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>            
    </Grid>
</UserControl>
