<UserControl x:Class="NewStarTicket.Views.TicketListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewStarTicket.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="400"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                VerticalAlignment="Top"
                Grid.Row="0">
            <TextBox Text="Rechercher ..."/>
            <Button Name="searchButton"/>
        </StackPanel>


        <DataGrid ItemsSource="{Binding Tickets}" 
              AutoGenerateColumns="False" 
              HeadersVisibility="Column" 
              CanUserAddRows="False" 
              GridLinesVisibility="Horizontal" 
              Grid.Row="1"
              FontFamily="Palatino Linotype">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" 
                                Binding="{Binding IdTicket}" 
                                Width="50"/>
                <DataGridTextColumn Header="Titre" 
                                Binding="{Binding TitleTicket}" 
                                Width="217"/>
                <DataGridTextColumn Header="Date d'emission" 
                                Binding="{Binding BroadcastDateTicket}" 
                                Width="160"/>
                <DataGridTextColumn Header="Niveau d'urgence" 
                                Binding="{Binding EmergencyLevelIdTicket}" 
                                Width="80"/>
                <DataGridTextColumn Header="Utilisateur" 
                                Binding="{Binding UserIdTicket}" 
                                Width="80"/>
                <DataGridTemplateColumn Header="Option" 
                                    Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Button Content="Voir" 
                                    Command="{Binding DataContext.ViewCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}" 
                                    Width="60"/>
                                <Button Content="Supprimer" 
                                    Background="Red" 
                                    Foreground="White" 
                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                    CommandParameter="{Binding}" 
                                    Width="75"/>
                            </StackPanel>

                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Etat ticket" 
                                    Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Button Content="Je prends !" 
                                    Background="LightBlue" 
                                    Command="{Binding DataContext.UpdateCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                    CommandParameter="{Binding}" 
                                    Width="100" 
                                    Margin="0,2"/>
                                <Button Content="Terminer !" 
                                    Background="LightGreen" 
                                    Command="{Binding DataContext.FinishCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                    CommandParameter="{Binding}" 
                                    Width="100" 
                                    Margin="0,2"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>            
    </Grid>
</UserControl>
